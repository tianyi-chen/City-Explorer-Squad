<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_journey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cityexplorersquad.AddJourneyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="New Journey"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView5"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="24sp"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <View
            android:id="@+id/list_item_seperator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/colorPrimary" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15.5"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip" >

            <TextView
                android:text="city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:paddingLeft="3dip" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="city to explore"
                android:id="@+id/cityInput"
                android:layout_weight="2"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:backgroundTint="@color/colorPrimary" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <TextView
                android:text="start date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:paddingLeft="3dip" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="start date of the journey"
                android:id="@+id/dateInput"
                android:layout_weight="2"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:backgroundTint="@color/colorPrimary" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8" >

                <Button
                    android:text="Add Member"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/add_member"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/apptheme_button"
                    android:onClick="onClickAddMember"
                    android:layout_marginEnd="5dip"
                    android:layout_weight="1" />

                <Button
                    android:text="Finish"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/finish"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/apptheme_button"
                    android:layout_marginStart="5dip"
                    android:onClick="onClickFinish" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
